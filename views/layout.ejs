<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title><%= title || "Vouch" %> | HOME VOUCH</title>

  <!-- üåà Styles -->
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
  <!-- Header -->
  <header class="app-header">
    <div class="container header-row">
      <div class="brand"><a href="/">HOME VOUCH</a></div>

      <!-- üß≠ Bouton burger mobile -->
      <button class="burger" id="burger" aria-label="Menu">
        <span></span><span></span><span></span>
      </button>

      <!-- üîó Navigation principale -->
      <nav class="nav" id="navMenu">
        <a href="/vouches" class="<%= path === '/vouches' ? 'active' : '' %>">Vouches</a>
        <a href="/leaderboard" class="<%= path === '/leaderboard' ? 'active' : '' %>">Leaderboard</a>
        <a href="/products" class="<%= path === '/products' ? 'active' : '' %>">Produits</a>
        <% if (user?.isAdmin) { %>
          <a href="/config" class="<%= path === '/config' ? 'active' : '' %>">Config</a>
        <% } %>

        <!-- Auth dans le menu mobile -->
        <div class="mobile-auth">
          <% if (user) { %>
            <span class="user-tag"><%= user.username %> <%= user.isAdmin ? '¬∑ Admin' : '' %></span>
            <a class="btn btn-outline" href="/logout">Se d√©connecter</a>
          <% } else { %>
            <a class="btn btn-primary" href="/auth/discord">Se connecter</a>
          <% } %>
        </div>
      </nav>

      <!-- Auth (version desktop uniquement) -->
      <div class="auth desktop-auth">
        <% if (user) { %>
          <span class="user-tag"><%= user.username %> <%= user.isAdmin ? '¬∑ Admin' : '' %></span>
          <a class="btn btn-outline" href="/logout">Se d√©connecter</a>
        <% } else { %>
          <a class="btn btn-primary" href="/auth/discord">Se connecter</a>
        <% } %>
      </div>
    </div>
  </header>

  <!-- Contenu principal -->
  <main class="container page">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="app-footer">
    <div class="container">
      HOME VOUCH ‚Äî <span class="muted">Dark UI</span>
    </div>
  </footer>

  <!-- Modale (utilis√©e sur plusieurs pages) -->
  <div id="modal-overlay" class="modal-overlay" hidden>
    <div id="modal-panel" class="modal">
      <button type="button" class="modal-close" aria-label="Fermer">‚úñ</button>
      <div id="modal-content"></div>
    </div>
  </div>

  <!-- ‚úÖ Conteneur pour les notifications -->
  <div id="toasts"></div>

  <!-- üîß Scripts globaux -->
  <script src="/js/effects.js"></script>
  <script src="/js/main.js"></script>

  <!-- üì± Script menu burger -->
  <script>
    const burger = document.getElementById('burger');
    const navMenu = document.getElementById('navMenu');

    burger.addEventListener('click', () => {
      burger.classList.toggle('active');
      navMenu.classList.toggle('open');
      document.body.classList.toggle('menu-open');
    });
  </script>
</body>
</html>
