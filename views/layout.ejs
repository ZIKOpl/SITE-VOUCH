<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Vouch" %> | HOME VOUCH</title>

  <!-- ðŸŒˆ Styles -->
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
  <!-- Header -->
  <header class="app-header">
    <div class="container header-row">
      <div class="brand"><a href="/">HOME VOUCH</a></div>

      <!-- ðŸ§­ Bouton Burger -->
      <button class="burger" id="burger" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <!-- ðŸ”— Navigation -->
      <nav class="nav" id="navMenu">
        <button class="nav-close" id="navClose" aria-label="Fermer le menu">âœ•</button>
        <a href="/vouches" class="<%= path === '/vouches' ? 'active' : '' %>">Vouches</a>
        <a href="/leaderboard" class="<%= path === '/leaderboard' ? 'active' : '' %>">Leaderboard</a>
        <a href="/products" class="<%= path === '/products' ? 'active' : '' %>">Produits</a>
        <% if (user?.isAdmin) { %>
          <a href="/config" class="<%= path === '/config' ? 'active' : '' %>">Config</a>
        <% } %>

        <% if (user) { %>
          <a class="btn btn-outline logout-btn" href="/logout">Se dÃ©connecter</a>
        <% } else { %>
          <a class="btn btn-primary login-btn" href="/auth/discord">Se connecter</a>
        <% } %>
      </nav>
    </div>
  </header>

  <!-- Contenu principal -->
  <main class="container page">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="app-footer">
    <div class="container">
      HOME VOUCH â€” <span class="muted">Dark UI</span>
    </div>
  </footer>

  <!-- Scripts globaux -->
  <script src="/js/effects.js"></script>
  <script src="/js/main.js"></script>

  <!-- ðŸ“± Script du menu burger -->
  <script>
    const burger = document.getElementById('burger');
    const navMenu = document.getElementById('navMenu');
    const navClose = document.getElementById('navClose');

    const toggleMenu = (state) => {
      if (state === 'open') {
        burger.classList.add('active');
        navMenu.classList.add('open');
        document.body.classList.add('menu-open');
      } else {
        burger.classList.remove('active');
        navMenu.classList.remove('open');
        document.body.classList.remove('menu-open');
      }
    };

    burger?.addEventListener('click', () => toggleMenu('open'));
    navClose?.addEventListener('click', () => toggleMenu('close'));

    // Fermer quand on clique Ã  cÃ´tÃ©
    document.addEventListener('click', (e) => {
      if (navMenu.classList.contains('open') && !navMenu.contains(e.target) && !burger.contains(e.target)) {
        toggleMenu('close');
      }
    });

    // Fermer quand on clique sur un lien
    navMenu?.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => toggleMenu('close'));
    });
  </script>
</body>
</html>
