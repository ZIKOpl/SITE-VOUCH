<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> - HOME VOUCH</title>

  <link rel="stylesheet" href="/style.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
</head>
<body>
  <!-- =========================================================
       HEADER / NAVIGATION
       ========================================================= -->
  <header class="app-header">
    <div class="header-row container">
      <div class="brand">
        <a href="/">HOME VOUCH</a>
      </div>

      <!-- Bouton burger mobile -->
      <button class="burger" id="burger" aria-label="Menu">
        <span></span><span></span><span></span>
      </button>

      <nav class="nav" id="navMenu">
        <a href="/vouches" class="<%= path === '/vouches' ? 'active' : '' %>">Vouches</a>
        <a href="/leaderboard" class="<%= path === '/leaderboard' ? 'active' : '' %>">Leaderboard</a>
        <a href="/products" class="<%= path === '/products' ? 'active' : '' %>">Produits</a>
        <% if (user?.isAdmin) { %>
          <a href="/config" class="<%= path === '/config' ? 'active' : '' %>">Config</a>
        <% } %>
        <% if (user) { %>
          <span class="user-tag"><%= user.username %><% if (user.isAdmin) { %> · Admin<% } %></span>
          <a href="/logout" class="btn-outline">Se déconnecter</a>
        <% } else { %>
          <a href="/auth/discord" class="btn-primary">Connexion Discord</a>
        <% } %>
      </nav>
    </div>
  </header>

  <!-- =========================================================
       CONTENU DE PAGE
       ========================================================= -->
  <main class="page container">
    <%- body %>
  </main>

  <!-- =========================================================
       FOOTER
       ========================================================= -->
  <footer class="app-footer">
    <div class="container">
      © <%= new Date().getFullYear() %> HOME VOUCH · Tous droits réservés
    </div>
  </footer>

  <!-- =========================================================
       SCRIPT MENU BURGER
       ========================================================= -->
  <script>
    const burger = document.getElementById('burger');
    const navMenu = document.getElementById('navMenu');

    burger.addEventListener('click', () => {
      burger.classList.toggle('active');
      navMenu.classList.toggle('open');
    });
  </script>
</body>
</html>
